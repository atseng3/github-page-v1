$icon
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	
	/* Enable Ligatures ================ */
	-webkit-font-feature-settings: "liga";
	-moz-font-feature-settings: "liga=1";
	-moz-font-feature-settings: "liga";
	-ms-font-feature-settings: "liga" 1;
	-o-font-feature-settings: "liga";
	font-feature-settings: "liga";

img 
	display none;
*
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale; 
	font-family 'Ubuntu', sans-serif
body
	margin 0
	min-height 100vh
	overflow hidden
	#container
		// background-image url('images/visualizer-background.png')
		background-image url('images/something-else.svg')
		background-color #000
		background-size auto
		background-repeat no-repeat
		background-position center 400px
		min-height inherit
		text-align center
		padding 20px
		input#search-youtube
			outline none
			background transparent
			border-top none
			border-left none
			border-right none
			border-bottom 1px solid rgba(242, 242, 242, 0.3)
			width 500px
			font-weight 100
			font-size	25px
			height 47px
			color #f2f2f2
		::-webkit-input-placeholder
			color rgba(242,242,242, 0.3)
		:-moz-placeholder
			color rgba(242,242,242, 0.3)
		::-moz-placeholder
			color rgba(242,242,242, 0.3)
		:-ms-placeholder
			color rgba(242,242,242, 0.3)
		.search-container:before
			@extends $icon
			cursor pointer
			position absolute
			left 0
			content "\e74f"
			color rgba(242,242,242, 1)
			font-size 40px
			// &:hover
			// 	color rgba(242,242,242, 1)
		.search-container
			position relative
			.search-container__autocomplete
				position absolute
				top 110%
				left 0
				right 0
				width	500px
				margin auto
				border 1px solid rgba(0, 0, 0, 1)
				.autocomplete__items
					background rgba(255, 255, 255, 0.5)
					color rgba(242,242,242, 1)
					height 60px
					text-align left
					padding 5px
					&.hover
						background rgba(0, 0, 0, 0.7)
					.img
						float	left
						margin-right 10px
					img
						height 50px
						display block
						
					div
						overflow hidden
						_overflow visible
						zoom 1


		.search-container:hover:before
			color rgba(242,242,242, 1)
		iframe
			display none
		#upload
			background transparent
			border none
		#upload:before
			@extends $icon
			cursor pointer
			content "\e7ba"
			font-size 40px
			color rgba(242, 242, 242, 1)
			background transparent
		#nowPlaying
			color rgba(242,242,242, 1)
			height 50px
			line-height 50px
			font-size 25px
			font-weight 100
			cursor pointer
		#visualizer-icon
			// background url('images/waterdrop.png') center no-repeat
			// background-image url('images/visualizer-logo.svg') center
			background-size contain
			width inherit
			height 330px
			margin 10%
		progress[value]
			-webkit-appearance none
			appearance none
			width 80%
			height 8px
		progress[value]::-webkit-progress-bar
			background-color rgba(255, 198, 0, 0.5)
			
			box-shadow 0 1px 1px rgba(0, 0, 0, 0.5) inset
		progress[value]::-webkit-progress-value
			background-color #FFC600







