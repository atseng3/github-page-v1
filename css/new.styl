$icon
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	
	/* Enable Ligatures ================ */
	-webkit-font-feature-settings: "liga";
	-moz-font-feature-settings: "liga=1";
	-moz-font-feature-settings: "liga";
	-ms-font-feature-settings: "liga" 1;
	-o-font-feature-settings: "liga";
	font-feature-settings: "liga";

*
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale; 
	font-family 'Ubuntu', sans-serif
	
body 
	min-height 100%
	width 100%
	height auto
	position fixed
	top 0
	left 0
	text-align left
	p
		margin-left 100px
		font-weight 400
	  color rgba(0, 0, 0, 60%)
	  font-size 40px
	  line-height 40px
#background
	background: url('images/pic_gradient.jpg') no-repeat
	background-position right 25%
	background-size cover
	min-height 100%
	// min-width 1024px
	min-width 320px
	width 100%
	height auto
	position fixed
	top 0
	left 0
nav
	background: rgba(0, 0, 0, 80%)
	position: fixed
	width 100px
	height 100%
	top 0
	left 0
	text-align center
	.nav-items
		width 100px
		height 100px
		color #FFF
		font-size 20px
		line-height	25px
	.projects:before
		@extends $icon
		content "\e607"
		color #FFF
		font-size 40px
	.contact:before
		@extends $icon
		content "\e60a"
		color #FFF
		font-size 40px
		




