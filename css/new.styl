    /* Style adjustments for viewports that meet the condition */

/* Smartphones (portrait and landscape) ----------- */

@media only screen and (min-width : 320px) and (max-width : 480px)
	#background
		background-position right
	#desc p
		display	none
	#desc
		text-align center
		height 30px
		width 100%
		margin-top 120px
		
	#desc:before
		display block
		content 'Software Developer'
		color #FFF
		font-weight 700
		font-size 25px
		margin auto
		text-shadow 0px 1px 1px #000
		animation slideDown 1s
		animation-delay 1s
		animation-fill-mode both
	nav 
		width 100%
		height 100px
		animation slideDown 1.5s
		.nav-brand
			height 80px
			color #FFF
			font-size 20px
			line-height	25px
			padding 10px 0px
			position relative
			cursor pointer
		.logo
			background none
		.logo:before
			@extends $icon
			content "\e60e"
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			margin auto
			height 42px
			color #FFF
			font-size 40px
		.nav-list
			display none
	#background
		max-width 480px

/* Smartphones (landscape) ----------- */
@keyframes slideDown
	0% {
		transform translateY(-200px)
	}
	100% {
		transform none
	}
@keyframes slideLeft
	0% {
	}
	100% {
		transform none
	}
@keyframes slideRight
	0% {
		transform translateX(-200%)
	}
	100% {
		transform none
	}
@keyframes fadeOut
	from {
		opacity 1
	}
	to {
		opacity 0
	}