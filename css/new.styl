$icon
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	
	/* Enable Ligatures ================ */
	-webkit-font-feature-settings: "liga";
	-moz-font-feature-settings: "liga=1";
	-moz-font-feature-settings: "liga";
	-ms-font-feature-settings: "liga" 1;
	-o-font-feature-settings: "liga";
	font-feature-settings: "liga";

*
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale; 
	font-family 'Ubuntu', sans-serif
	
body 
	min-height 100%
	width 100%
	height auto
	position fixed
	top 0
	left 0
	text-align left
p
	// margin-left 100px
	margin-left 152px
	font-weight 300
	color rgba(255, 255, 255, 1)
	font-size 40px
	line-height 55px
	position absolute
	top 41%
	// top 7%
	// text-shadow 0px 0px 5px #000
	z-index 1
	transform translateX(-200%)
	animation slideRight 1.5s
	animation-delay 1s
	animation-fill-mode both
	span
		// color	rgba(200,78,75, 1)
		font-weight 700
		text-shadow: 0px 0px 1px #000;
#background
	background: url('images/pic_gradient.jpg') no-repeat
	background-position right 25%
	background-size cover
	min-height 100%
	// min-width 1024px
	min-width 320px
	width 100%
	height auto
	position fixed
	top 0
	left 0
nav
	background: rgba(0, 0, 0, 0.6)
	position: fixed
	width 100px
	height 100%
	top 0
	left 0
	text-align center
	z-index 3
	animation slideRight 1.5s
	
	.nav-brand
		height 80px
		color #FFF
		font-size 20px
		line-height	25px
		padding 10px 0px
		position relative
		cursor pointer
	.logo
		background #7AB3B5
	.logo:before
		@extends $icon
		content "\e60e"
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin auto
		height 42px
		color #FFF
		font-size 40px
	.nav-list
		height 90%
		margin-top 50px
	.nav-list__items
		display block
		text-decoration none
		text-transform uppercase
		height 80px
		color #FFF
		font-size 14px
		// font-weight 300
		line-height	25px
		padding 10px 0px
		position relative
		cursor pointer
		transition all 0.2s ease
		&:hover
			color rgba(200,78,75, 1)
	.projects:before
		@extends $icon
		content "\e607"
		color #FFF
		font-size 40px
		transition all 0.2s ease
	.projects:hover:before
		color rgba(200,78,75, 1)
	.contact:before
		@extends $icon
		content "\e60a"
		color #FFF
		font-size 40px
		transition all 0.2s ease
	.contact:hover:before
		color rgba(200,78,75, 1)
#projects
	height 100%
	background rgba(0, 0, 0, 0.6)
	width 100%
	position absolute
	right 0
	transform translateX(200%)
	
	.project-items
		width 100px
		height 100px
		// background rgba(0, 0, 0, 0.6)
			
.slideLeft
	animation slideLeft 1.5s
	animation-fill-mode both
.fadeOut
	animation fadeOut 1s
	animation-delay 1s
	animation-fill-mode both

