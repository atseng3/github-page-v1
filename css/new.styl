/* Smartphones (portrait and landscape) ----------- */

@media only screen and (min-width : 320px) and (max-width : 480px)
	#background
		background-position right
	p
		display	none
	nav 
		width 100%
		height 100px
		animation slideDown 1.5s
		.nav-brand
			height 80px
			color #FFF
			font-size 20px
			line-height	25px
			padding 10px 0px
			position relative
			cursor pointer
		.logo
			background none
		.logo:before
			@extends $icon
			content "\e60e"
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			margin auto
			height 42px
			color #FFF
			font-size 40px
		.nav-list
			display none
	#background
		max-width 480px

/* Smartphones (landscape) ----------- */
@keyframes slideDown
	0% {
		transform translateY(-200%)
	}
	100% {
		transform none
	}