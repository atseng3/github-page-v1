$icon
	font-family: 'icomoon';
	speak: none;
	font-style: normal;
	font-weight: normal;
	font-variant: normal;
	text-transform: none;
	line-height: 1;
	
	/* Enable Ligatures ================ */
	-webkit-font-feature-settings: "liga";
	-moz-font-feature-settings: "liga=1";
	-moz-font-feature-settings: "liga";
	-ms-font-feature-settings: "liga" 1;
	-o-font-feature-settings: "liga";
	font-feature-settings: "liga";

*
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale; 
	font-family 'Ubuntu', sans-serif
	
body 
	min-height 100%
	width 100%
	height auto
	position fixed
	top 0
	left 0
	text-align left
	overflow scroll
p
	// margin-left 100px
	margin-left 152px
	font-weight 300
	color rgba(255, 255, 255, 1)
	font-size 40px
	line-height 55px
	position absolute
	top 41%
	// top 7%
	// text-shadow 0px 0px 5px #000
	z-index 1
	transform translateX(-200%)
	animation slideRight 1s
	animation-delay 0.5s
	animation-fill-mode both
	span
		// color	rgba(200,78,75, 1)
		font-weight 700
		text-shadow: 0px 0px 1px #000;
#background
	background: url('images/profileHD-compressor.jpg') no-repeat
	background-position right 36%
	background-size cover
	min-height 100%
	// min-width 1024px
	min-width 320px
	width 100%
	height auto
	position fixed
	top 0
	left 0
nav
	background: rgba(0, 0, 0, 0.6)
	position: fixed
	width 100px
	height 100%
	top 0
	left 0
	text-align center
	z-index 3
	animation slideRight 1s
	
	.nav-brand
		display block
		height 80px
		color #FFF
		font-size 20px
		line-height	25px
		padding 10px 0px
		position relative
		cursor pointer
	.logo
		background #7AB3B5
	.logo:before
		@extends $icon
		content "\e60e"
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin auto
		height 42px
		color #FFF
		font-size 40px
	.nav-list
		height 90%
		margin-top 50px
	.nav-list__items
		display block
		text-decoration none
		text-transform uppercase
		height 80px
		color #FFF
		font-size 14px
		// font-weight 300
		line-height	25px
		padding 10px 0px
		position relative
		cursor pointer
		transition all 0.2s ease
		&.selected
			color rgba(200,78,75, 1)
		&:hover
			color rgba(200,78,75, 1)
	.projects:before
		@extends $icon
		content "\e608"
		color #FFF
		font-size 40px
		transition all 0.2s ease
		&.selected
			color rgba(200,78,75, 1)
	.projects:hover:before
		color rgba(200,78,75, 1)
	.contact:before
		@extends $icon
		content "\e6ee"
		color #FFF
		font-size 40px
		transition all 0.2s ease
	.contact:hover:before
		color rgba(200,78,75, 1)
#projects
	height 100%
	background rgba(0, 0, 0, 0.4)
	// width 100%
	position absolute
	left 100px
	right 0
	transform translateX(200%)
	color rgba(255, 255, 255, 1)
	.project-title
		text-transform uppercase
		color #C89F4B
		font-size 30px
		// width 100%
		height 99px
		text-align center
		border-bottom 1px solid #FFF8EB
		vertical-align center
		line-height 100px
	.projects-container
		text-align center
		.projects-container__items
			text-decoration none
			cursor pointer
			margin 20px
			display inline-block
			width 200px
			height 250px
			font-size 25px
			border 1px solid white
			border-radius 10px
			vertical-align top
			text-align center
			position relative
			transition all 0.2s ease
			color #FFF
		.projects-container__items:before
			@extends $icon
			color #FFF
			font-size 100px
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			margin 50px
			transition all 0.2s ease
		.mic:before
			content "\e609"
		.tile:before
			content "\e607"
		.subscription:before
			content "\e600"
		.baconbnb:before
			content "\e602"
		.projects-container__items:hover:before
			color #F2CC7F
		.projects-container__items:hover
			color #F2CC7F
			border 1px solid #F2CC7F
		.projects-container__item-name
			position absolute
			bottom 0
			left 0
			right 0
			margin-bottom 15px
			// margin auto
		// transition all 0.2s ease
			
.slideLeft
	animation slideLeft 0.75s
	animation-fill-mode both
.fadeOut
	animation fadeOut 0.2s
	animation-delay 0.2s
	animation-fill-mode both
.fadeIn
	animation fadeIn 0.2s
	animation-delay 0.2s
	animation-fill-mode both
.slideRightOut
	animation slideRightOut 0.75s
	animation-fill-mode both

