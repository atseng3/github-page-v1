/* Smartphones (portrait and landscape) ----------- */

@media only screen and (max-width : 480px)
	#background
		background-position right
	#desc p
		transform none
		animation none
		font-size 25px
		line-height 40px
		margin-left 20px
		text-align left
		top 600%
	#desc
		text-align center
		height 100%
		width 100%
		margin-top 67%
		margin-bottom 20px
		animation slideDown 1s
		animation-delay 1s
		animation-fill-mode both
		&.fadeOut
			animation none
		

	nav 
		width 100%
		height 100px
		animation slideDown 1.5s
		.nav-brand
			height 80px
			color #FFF
			font-size 20px
			line-height	25px
			padding 10px 0px
			position relative
			cursor pointer
		.logo
			background none
		.logo:before
			@extends $icon
			content "\e60e"
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			margin auto
			height 42px
			color #FFF
			font-size 40px
		.nav-list
			display none
	#background
		max-width 480px
		
	// incomplete
	#projects
		left 0
		.project-title:before
			@extends $icon
			content "\e8b1"
			color #FFF
			font-size 30px
			position absolute
			top 35px
			right 20px
