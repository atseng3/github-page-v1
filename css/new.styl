/* Smartphones (portrait and landscape) ----------- */

@media only screen and (max-width : 480px)
	#background
		background-position right
	#desc p
		transform none
		animation none
		font-size 25px
		line-height 40px
		margin-left 20px
		text-align left
		top 41%
		#learn-more
			font-size 15px
	#desc
		text-align center
		height 100%
		width 100%
		margin-top 60%
		margin-bottom 20px
		&.fadeOut
			margin 0
		// animation slideDown 1s
		// animation-delay 1s
		// animation-fill-mode forward
		// &.fadeOut
		// 	animation none
	
	nav#desktop-nav
		display none
	#mobile-nav-mask
		display none
	div#mobile-header
		text-align center
		display block
		background rgba(0,0,0,0.6)
		width 100%
		height 100px
		animation slideDown 1.5s
		#mobile-nav-icon
			&:before
				float left
				@extend $icon
				content '\e8b6'
				color #FFF
				font-size 30px
				position absolute
				top 30px
				left 20px
				
		.nav-brand
			display block
			height 80px
			color #FFF
			font-size 20px
			line-height	25px
			padding 10px 0px
			position relative
			cursor pointer
		.logo
			background none
		.logo:before
			@extends $icon
			content "\e60f"
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			margin auto
			height 42px
			color #FFF
			font-size 40px
		.nav-list
			display none
	#background
		max-width 480px
	#profile
		left 0
	#projects
		left 0
		

/* Smartphones (landscape) ----------- */
@keyframes slideDown
	0% {
		transform translateY(-600px)
	}
	100% {
		transform none
	}
@keyframes slideLeft
	0% {
	}
	100% {
		transform none
	}
@keyframes slideRight
	0% {
		transform translateX(-200%)
	}
	100% {
		transform none
	}
@keyframes fadeOut
	from {
		opacity 1
	}
	to {
		opacity 0
	}
@keyframes slideRightOut
	0% {
		transform none
	}
	100% {
		transform translateX(200%)
	}
@keyframes fadeIn
	from {
		opacity 0
	}
	to {
		opacity 1
	}