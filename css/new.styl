/* Smartphones (landscape) ----------- */
@keyframes slideDown
	0% {
		transform translateY(-400px)
	}
	100% {
		transform none
	}
@keyframes slideLeft
	0% {
	}
	100% {
		transform none
	}
@keyframes slideRight
	0% {
		transform translateX(-200%)
	}
	100% {
		transform none
	}
@keyframes fadeOut
	from {
		opacity 1
	}
	to {
		opacity 0
	}
@keyframes slideRightOut
	0% {
		transform none
	}
	100% {
		transform translateX(200%)
	}
@keyframes fadeIn
	from {
		opacity 0
	}
	to {
		opacity 1
	}